{
  "$schema": "https://json-schema.org/draft-07/schema",
  "id": "https://jacklehamster.github.io/dok-schema/process/actions/go-deep.json",
  "description": "Recurse inside an object and perform actions on underlying members",
  "allOf": [{
    "$ref": "action.json"
  }],
  "properties": {
    "goDeep": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["key-value", "object", "array", "leaf"]
        },
        "sequence": {
          "$ref": "../sequence.json"
        }
      },
      "required": ["sequence"]
    }
  },
  "required": ["goDeep"],
  "additionalProperties": false
}
